<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @tvseason.object %>
    <h1>Edit <%= @tvseason.season%></h1>
    <%= link_to "Delete", :action => :delete, :id => @tvseason.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @tvseason.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Season: </td>
              <td class="itemValue"><input type="text" name="tvseason[season]" value="<%= @tvseason.season %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
