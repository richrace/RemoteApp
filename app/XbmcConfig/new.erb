<div data-role="page">

  <div data-id="head" data-role="header" data-position="inline">
    <h1>New <%= @xbmc_config.title %></h1>
    <!-- 
      In the below a href need to put the location instead of using 
      Ruby url_for code otherwise the button doesn't work. 
    -->
    <a href="<%= url_for '/app/XbmcConfig/index' %>" class="cancel" data-direction="reverse" data-icon="delete">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form id="new_config" method="POST" action="<%= url_for :action => :create %>" name= 'xbmc_config_new'>
      <input type="hidden" name="id" value="<%= @xbmc_config.object %>"/>
			<% if @msg %>
			        <p style="color: red"><%= @msg %></p>
	    <% end %>
		  <% if @errors %>
		  	<script type="text/javascript" charset="utf-8">
		    	$(document).ready(function (){      
		      	mark_errors("#new_config", <%=  @errors %>);        
		    	});
		    </script>
		  <% end %>
		
      <ul data-role="listview">
	         <li>
	            <label for="xbmc_config[name]"><strong>Name:</strong></label>
	            <input type="text" id="xbmc_config[name]" name="xbmc_config[name]" 	value="<%= @xbmc_config.name %>" <%= placeholder( "Name" ) %> />
					</li>

	      	<li>	
	            <label for="xbmc_config[url]"><strong>URL:</strong></label>
	            <input type="text" id="xbmc_config[url]" name="xbmc_config[url]" value="<%= @xbmc_config.url %>" <%= placeholder( "localhost" ) %> />
	      	</li>

					<li>
	            <label for="xbmc_config[port]"><strong>Port:</strong></label>
	            <input type="text" id="xbmc_config[port]" name="xbmc_config[port]" value="<%= @xbmc_config.port %>" <%= placeholder( "8080" ) %> />
	      	</li>

					<li>
	            <label for="xbmc_config[usrname]"><strong>Username:</strong></label>
	            <input type="text" id="xbmc_config[usrname]" name="xbmc_config[usrname]" value="<%= @xbmc_config.usrname %>" <%= placeholder( "Username" ) %> />
	      	</li>

					<li>
	            <label for="xbmc_config[pass]"><strong>Password:</strong></label>
	            <input type="password" id="xbmc_config[pass]" name="xbmc_config[password]" value="<%= @xbmc_config.password %>" <%= placeholder( "Password" ) %> />
	      	</li>

					<li>
						<input type="submit" class="standardButton" value="Create" data-theme="a"/>
					</li>
				</ul>
    </form>
  </div>
</div>
