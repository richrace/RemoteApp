<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @xbmc_config.name %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @xbmc_config.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Name</div>
            <div class="itemValue"><%= @xbmc_config.name %></div>
          </li>
      
          <li>
            <div class="itemLabel">Url</div>
            <div class="itemValue"><%= @xbmc_config.url %></div>
          </li>
      
          <li>
            <div class="itemLabel">Port</div>
            <div class="itemValue"><%= @xbmc_config.port %></div>
          </li>
      
          <li>
            <div class="itemLabel">Usrname</div>
            <div class="itemValue"><%= @xbmc_config.usrname %></div>
          </li>
      
          <li>
            <div class="itemLabel">password</div>
            <div class="itemValue"><%= @xbmc_config.password %></div>
          </li>
      
          <li>
            <div class="itemLabel">Active</div>
            <div class="itemValue"><%= @xbmc_config.active %></div>
          </li>
      
    </ul>
  </div>

</div>
