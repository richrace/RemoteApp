<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @xbmc_config.name %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @xbmc_config.object %>" class="ui-btn-right" data-iconpos="right" data-icon="star" data-theme="e">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
						<div class="ui-grid-a">
            	<div class="ui-block-a"><strong>Name:</strong></div>
            	<div class="ui-block-b"><%= @xbmc_config.name %></div>
						</div>
          </li>
      
          <li>
            <div class="ui-grid-a">
							<div class="ui-block-a"><strong>Url:</strong></div>
            	<div class="ui-block-b"><%= @xbmc_config.url %></div>
						</div>
          </li>
      
          <li>
            <div class="ui-grid-a">
							<div class="ui-block-a"><strong>Port:</strong></div>
            	<div class="ui-block-b"><%= @xbmc_config.port %></div>
						</div>
          </li>
      
          <li>
						<div class="ui-grid-a">
            	<div class="ui-block-a"><strong>Username:</strong></div>
            	<div class="ui-block-b"><%= @xbmc_config.usrname %></div>
						</div>
          </li>
      
          <li>
            <div class="ui-grid-a">
							<div class="ui-block-a"><br/><strong>Active:</strong></div>
							<div class="ui-block-b">
									<select name="slider" id="flip-c" disabled="true" data-role="slider" data-theme="a">
										<option <%= "selected" if @xbmc_config.is_active? %> value="false">No</option>
										<option  <%= "selected" if @xbmc_config.is_active? %> value="true">Yes</option>
									</select> 
								</div>
						</div>
          </li>
      
    </ul>
  </div>

</div>
