<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @tvepisode.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @tvepisode.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="tvepisode[episode]" class="fieldLabel">Episode</label>
            <input type="text" id="tvepisode[episode]" name="tvepisode[episode]" <%= placeholder("Episode") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
