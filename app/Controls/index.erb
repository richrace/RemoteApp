<div data-role="page">

	<div data-id="head" data-mini="true" data-role="header" data-position="fixed" style="height:41px;">
		<div data-role="controlgroup" data-type="horizontal" style="left:10px; top:.4em; bottom:4px;">
			&nbsp;&nbsp;
			<a href="<%= url_for :controller => :Controls %>" data-role="button" data-theme="c" style="font-size:11px;">Remote</a>
			<a href="<%= url_for :controller => :Commands %>" data-role="button"  style="font-size:11px;">Commands</a>
		</div>
    
    <a href="<%= url_for :controller => :XbmcConfig %>" class="ui-btn-right" data-iconpos="right" data-icon="gear" data-transition="slideup">Settings</a>
	</div>

	<script type="text/javascript">
		function play_pause() {
			$.get("<%= url_for :action => :pause_play %>");
		}
		function stop() {
			$.get("<%= url_for :action => :stop %>");
		}
		function sm_skip_forward() {
			$.get("<%= url_for :action => :sm_skip_forward %>");
		}
		function big_skip_forward() {
			$.get("<%= url_for :action => :big_skip_forward %>");
		}
		function sm_skip_back() {
			$.get("<%= url_for :action => :sm_skip_back %>");
		}
		function big_skip_back() {
			$.get("<%= url_for :action => :big_skip_back %>");
		}
		function skip_next() {
			$.get("<%= url_for :action => :skip_next %>");
		}
		function skip_prev() {
			$.get("<%= url_for :action => :skip_prev %>");
		}
		function rewind() {
			$.get("<%= url_for :action => :rewind %>");
		}
		function fast_forward() {
			$.get("<%= url_for :action => :fast_forward %>");
		}

		$(document).ready(function() {
			$.mobile.fixedToolbars.show(true);
		});
	</script>

	<style>
		.control_play {
			height: 50px;
		}
	</style>
	
  <div data-role="content" style="text-align:center;">		
		<a href="#" onclick="play_pause()"><img class="control_play" src="/public/images/controls/button_black_play.png" /></a>     
   	&nbsp;&nbsp;&nbsp;
		 <a href="#" onclick="play_pause()"><img class="control_play" src="/public/images/controls/button_black_pause.png" /></a>     
   	&nbsp;&nbsp;&nbsp;
		<a href="#" onclick="stop()"><img class="control_play" src="/public/images/controls/button_black_stop.png" /></a>
		&nbsp;&nbsp;&nbsp;
		<br/>
		<a href="#" onclick="skip_prev()"><img class="control_play" src="/public/images/controls/button_black_first.png" /></a>
		&nbsp;&nbsp;
		<a href="#" onclick="rewind()"><img class="control_play" src="/public/images/controls/button_black_rew.png" /></a>
		&nbsp;&nbsp;&nbsp;
		<a href="#" onclick="fast_forward()"><img class="control_play" src="/public/images/controls/button_black_ffw.png" /></a>
		&nbsp;&nbsp;&nbsp;
		<a href="#" onclick="skip_next()"><img class="control_play" src="/public/images/controls/button_black_last.png" /></a>
		<br />
		<div data-role="controlgroup">
			<a href="#" data-role="button" onclick="sm_skip_back()">Small Skip Back</a>
			<a href="#" data-role="button" onclick="sm_skip_forward()">Small Skip Forward</a> 
		</div>
		<div data-role="controlgroup">
			<a href="#" data-role="button" onclick="big_skip_back()">Big Skip Back</a> 
			<a href="#" data-role="button" onclick="big_skip_forward()">Big Skip Forward</a>
		</div>
  </div>

	<div data-id="tabbar" data-role="footer" data-position="fixed" class="nav-cust">
		<div data-role="navbar" class="nav-cust" data-grid="d">
			<ul>
				<li><a href="<%= url_for :controller => :Controls %>" id="controls" data-icon="custom" class="ui-btn-active ui-state-persist">Controls</a></li>
				<li><a href="<%= url_for :controller => :Movie %>" id="movies" data-icon="custom">Movies</a></li>
				<li><a href="<%= url_for :controller => :Tvshow %>" id="shows" data-icon="custom">TV Shows</a></li>
				<li><a href="<%= url_for :controller => :Playlist %>" id="playlist" data-icon="custom">Playlist</a></li>
				<li><a href="<%= url_for :controller => :More %>" id="more" data-icon="custom">More</a></li>
			</ul>
		</div>
	</div>
	
</div>
