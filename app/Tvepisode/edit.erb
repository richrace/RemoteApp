<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @tvepisode.episode %></h1>
    <a href="<%= url_for :action => :show, :id => @tvepisode.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @tvepisode.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @tvepisode.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="tvepisode[episode]" class="fieldLabel">Episode</label>
            <input type="text" id="tvepisode[episode]" name="tvepisode[episode]" value="<%= @tvepisode.episode %>" <%= placeholder( "Episode" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
