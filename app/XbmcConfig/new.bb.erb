<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New XbmcConfig</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @xbmc_config.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Name: </td>
                <td class="itemValue"><input type="text" name="xbmc_config[name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Url: </td>
                <td class="itemValue"><input type="text" name="xbmc_config[url]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Port: </td>
                <td class="itemValue"><input type="text" name="xbmc_config[port]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Usrname: </td>
                <td class="itemValue"><input type="text" name="xbmc_config[usrname]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Pass: </td>
                <td class="itemValue"><input type="text" name="xbmc_config[pass]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Active: </td>
                <td class="itemValue"><input type="text" name="xbmc_config[active]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
