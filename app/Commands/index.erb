<div data-role="page">

	<div data-id="head" data-role="header" data-position="fixed" style="height:41px;">
		<div data-role="controlgroup" data-type="horizontal" style="left:10px; top:.4em; bottom:4px;">
			&nbsp;&nbsp;
			<a href="<%= url_for :controller => :Controls %>" data-role="button" style="font-size:11px;" data-direction="reverse">Remote</a>
			<a href="<%= url_for :controller => :Commands %>" data-role="button" data-theme="c" style="font-size:11px;">Commands</a>
		</div>
    
    <a href="<%= url_for :controller => :XbmcConfig %>" class="ui-btn-right" data-iconpos="right" data-icon="gear" data-transition="slideup">Settings</a>
	</div>

	<script type="text/javascript">
		function scan() {
			$.get("<%= url_for :action => :scan_video %>");
		}
		function clean() {
			$.get("<%= url_for :action => :clean_video %>");
		}		
		function up() {
			$.get("<%= url_for :action => :input_up %>");
		}		
		function left() {
			$.get("<%= url_for :action => :input_left %>");
		}		
		function right() {
			$.get("<%= url_for :action => :input_right %>");
		}
		function down() {
			$.get("<%= url_for :action => :input_down %>");
		}
		function select() {
			$.get("<%= url_for :action => :input_select %>");
		}	
		function back() {
			$.get("<%= url_for :action => :input_back %>");
		}		
		function home() {
			$.get("<%= url_for :action => :input_home %>");
		}		
		function load_volume() {
			$.get("<%= url_for :action => :load_volume %>");
		}
		function mute() {
			$.get("<%= url_for :action => :toggle_mute %>");
		}
		function increaseVolume() {
			$.get("<%= url_for :action => :increase_volume %>");
		}
		function decreaseVolume() {
			$.get("<%= url_for :action => :decrease_volume %>")
		}
		function updateVolume(vol) {
			document.getElementById("volume").innerHTML = vol;
			$.fixedToolbars.show(true);
		}
		$(document).ready( function() {
			load_volume();
		});
	</script>
	<style>
		.table-commands {
			padding:1em;
			text-align:center;
		}
		.table-center {
			margin-left: auto;
			margin-right: auto;
		}
	</style>

  <div data-role="content">
		<div style="text-align:center;">
			<a href="#" onclick="scan()">Scan</a>&nbsp;&nbsp;&nbsp;&nbsp;
			<a href="#" onclick="clean()">Clean</a>
			<br />
			Volume: <span id="volume">??</span>
			<br />
			<a href="#" onClick="mute()">Mute</a>&nbsp;&nbsp;&nbsp;&nbsp;
			<a href="#" onClick="decreaseVolume()">- Volume</a>&nbsp;&nbsp;&nbsp;&nbsp;
			<a href="#" onClick="increaseVolume()">+ Volume</a>
		</div>
		<div>
			<table class="table-center">
				<tr>
					<td class="table-commands"><a href="#" onClick="back()"><img src="/public/images/commands/back.png" /></a></td>
					<td class="table-commands"><a href="#" onClick="up()"><img src="/public/images/commands/arrow_up.png" /></a></td>
					<td class="table-commands"><a href="#" onClick="home()"><img src="/public/images/commands/home.png" /></a></td>
				</tr>
				<tr>
					<td class="table-commands"><a href="#" onClick="left()"><img src="/public/images/commands/arrow_left.png" /></a></td>
					<td class="table-commands"><a href="#" onClick="select()">Select</a></td>
					<td class="table-commands"><a href="#" onClick="right()"><img src="/public/images/commands/arrow_right.png" /></a></td>
				</tr>
				<tr>
					<td></td>
					<td class="table-commands"><a href="#" onClick="down()"><img src="/public/images/commands/arrow_down.png" /></a></td>
					<td></td>
				</tr>
			</table>
		</div>
  </div>

	<div data-id="tabbar" data-role="footer" data-position="fixed" class="nav-cust">
		<div data-role="navbar" class="nav-cust" data-grid="d">
			<ul>
				<li><a href="<%= url_for :controller => :Commands %>" id="controls" data-icon="custom" class="ui-btn-active ui-state-persist">Controls</a></li>
				<li><a href="<%= url_for :controller => :Movie %>" id="movies" data-icon="custom">Movies</a></li>
				<li><a href="<%= url_for :controller => :Tvshow %>" id="shows" data-icon="custom">TV Shows</a></li>
				<li><a href="<%= url_for :controller => :Playlist %>" id="playlist" data-icon="custom">Playlist</a></li>
				<li><a href="<%= url_for :controller => :More %>" id="more" data-icon="custom">More</a></li>
			</ul>
		</div>
	</div>
</div>
