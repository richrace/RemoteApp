<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @tvseason.season %></h1>
    <a href="<%= url_for :action => :show, :id => @tvseason.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @tvseason.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @tvseason.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="tvseason[season]" class="fieldLabel">Season</label>
            <input type="text" id="tvseason[season]" name="tvseason[season]" value="<%= @tvseason.season %>" <%= placeholder( "Season" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
