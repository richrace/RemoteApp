<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @xbmc_config.title %></h1>
    <a href="<%= url_for '/app/XbmcConfig/index' %>" class="cancel" data-direction="reverse">
      Cancel
			<% puts "PRESSED CANCEL "%>
    </a>
  </div>

  <div data-role="content">
    <form id="new_config" method="POST" action="<%= url_for :action => :create %>" name= 'xbmc_config_new'>
      <input type="hidden" name="id" value="<%= @xbmc_config.object %>"/>
			<% if @msg %>
			        <p style="color: red"><%= @msg %></p>
	    <% end %>
		  <% if @errors %>
		  	<script type="text/javascript" charset="utf-8">
		    	$(document).ready(function (){      
		      	mark_errors("#new_config", <%=  @errors %>);        
		    	});
		    </script>
		  <% end %>
		
          <div data-role="fieldcontain">
            <label for="xbmc_config[name]" class="fieldLabel">Name</label>
            <input type="text" id="xbmc_config[name]" name="xbmc_config[name]" value="<%= @xbmc_config.name %>" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="xbmc_config[url]" class="fieldLabel">Url</label>
            <input type="text" id="xbmc_config[url]" name="xbmc_config[url]" value="<%= @xbmc_config.url %>" <%= placeholder("Url") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="xbmc_config[port]" class="fieldLabel">Port</label>
            <input type="text" id="xbmc_config[port]" name="xbmc_config[port]" value="<%= @xbmc_config.port %>" <%= placeholder("Port") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="xbmc_config[usrname]" class="fieldLabel">Username</label>
            <input type="text" id="xbmc_config[usrname]" name="xbmc_config[usrname]" value="<%= @xbmc_config.usrname %>" <%= placeholder("Username") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="xbmc_config[password]" class="fieldLabel">Password</label>
            <input type="password" id="xbmc_config[password]" name="xbmc_config[password]" value="<%= @xbmc_config.password %>" <%= placeholder("Password") %> />
          </div>
      <input type="submit" class="standardButton" value="Create"/>
    </form>
  </div>

</div>
